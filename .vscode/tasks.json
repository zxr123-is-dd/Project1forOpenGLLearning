{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "options": {
        "cwd": "${workspaceFolder}/build",
    },
    "tasks": [
        {
            "label": "cmake",
            "type": "shell",
            "command": "cmake",
            "args": [
                "-G", "MinGW Makefiles",
                "..", 
                "-DCMAKE_BUILD_TYPE=Debug"
            ],
            "problemMatcher": [],
        },
        {
            "label": "build",
            "type": "shell",
            "command": "mingw32-make",
            "args": [],
            "dependsOn": "cmake",
            "group": {
                "kind": "build",
                "isDefault": true,
            },
            "problemMatcher": ["$gcc"]
        }
    ]
}